<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Brand Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <style>
      body {
        background-color: #ffffff; /* From coupon */
        color: #000000; /* From coupon */
        font-family: Arial, sans-serif; /* Retain from category, as coupon doesn't specify */
      }

      .main-content {
        background-color: #ffffff; /* From coupon */
        margin-left: 300px;
        padding: 20px;
      }

      .main-header {
        margin-bottom: 20px;
      }

      .card {
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        background-color: #edf4f5; /* From coupon table-container */
      }

      .action-btn {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        border: none;
        background-color: transparent;
        cursor: pointer;
        padding: 5px 5px;
      }

      .action-btn i {
        font-size: 16px;
      }

      .btn-success {
        background-color: #2ecc71; /* From coupon btn-list */
        border: none; /* From coupon */
        color: #ffffff; /* From coupon */
        font-size: 12px; /* From coupon btn-list */
        padding: 5px 15px; /* From coupon btn-list */
        border-radius: 5px; /* From coupon btn-list */
      }

      .btn-danger {
        background-color: #dc3545; /* From coupon btn-unlist */
        border: none; /* From coupon */
        color: #ffffff; /* From coupon */
        font-size: 12px; /* From coupon btn-unlist */
        padding: 5px 15px; /* From coupon btn-unlist */
        border-radius: 5px; /* From coupon btn-unlist */
      }

      .btn-primary {
        background-color: #3498db; /* From coupon btn-edit */
        border: none; /* From coupon */
        color: #ffffff; /* From coupon */
        font-size: 12px; /* From coupon btn-edit */
        padding: 5px 15px; /* From coupon btn-edit */
        border-radius: 5px; /* From coupon btn-edit */
      }

      .btn-secondary {
        background-color: #7f8c8d; /* From coupon btn-clear */
        border: none; /* From coupon */
        color: #ffffff; /* From coupon */
        font-size: 12px; /* From coupon btn-clear */
        padding: 5px 15px; /* From coupon btn-clear */
        border-radius: 5px; /* From coupon btn-clear */
      }

      .btn-add-brand {
        background-color: #2ecc71; /* From coupon btn-add-coupon */
        border: none; /* From coupon */
        color: #ffffff; /* From coupon */
        font-size: 14px; /* From coupon btn-add-coupon */
        padding: 8px 20px; /* From coupon btn-add-coupon */
        border-radius: 5px; /* From coupon btn-add-coupon */
      }

      .search-container {
        position: relative;
        max-width: 360px;
      }

      .search-container i {
        position: absolute;
        top: 10px;
        left: 10px;
        color: #adb5bd;
      }

      .search-input {
        background-color: #ffffff; /* From coupon search-bar */
        border: 1px solid #ced4da; /* From coupon search-bar */
        color: #000000; /* From coupon search-bar */
        padding: 5px 10px; /* From coupon search-bar */
        border-radius: 5px; /* From coupon search-bar */
      }

      .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
        margin-bottom: 20px;
      }

      .table {
        background-color: #eef5f6; /* From coupon table */
        color: #000000; /* From coupon table */
      }

      .table th {
        background-color: #d1e7e9; /* From coupon table th */
        color: #000000; /* From coupon table th */
        text-transform: uppercase; /* From coupon table th */
        font-size: 12px; /* From coupon table th */
        border: none; /* From coupon table th */
      }

      .table td {
        background-color: #fbfdfd; /* From coupon table td */
        color: #000000; /* From coupon table td */
        border: none; /* From coupon table td */
        font-size: 14px; /* From coupon table td */
      }

      .table tr {
        border-bottom: 1px solid #f5f8fa; /* From coupon table tr */
      }

      .form-control {
        background-color: #ffffff; /* From coupon form-control */
        color: #000000; /* From coupon form-control */
        border: 1px solid #ced4da; /* From coupon form-control */
      }

      .is-invalid {
        border-color: #dc3545; /* From coupon is-invalid */
      }

      .invalid-feedback {
        display: none;
        color: #dc3545; /* From coupon invalid-feedback */
        font-size: 12px; /* From coupon invalid-feedback */
      }

      .is-invalid ~ .invalid-feedback {
        display: block;
      }

      @media (max-width: 768px) {
        .main-content {
          margin-left: 0;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include("../partials/admin/header") %>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 main-content">
          <div class="row main-header">
            <div class="col-md-6">
              <h2>Brand Management</h2>
            </div>
            <div class="col-md-6 text-end">
              <div class="d-flex justify-content-end align-items-center">
                <form
                  class="search-container me-4"
                  method="GET"
                  action="/admin/brands"
                  id="searchForm"
                >
                  <div style="display: flex; justify-content: space-around">
                    <input
                      type="text"
                      name="search"
                      class="form-control search-input"
                      placeholder="Search "
                      value="<%= search %>"
                      id="searchInput"
                    />
                    <button type="submit" class="btn btn-primary ms-2">
                      Search
                    </button>
                    <button
                      type="button"
                      class="btn btn-secondary ms-2"
                      id="clearBtn"
                    >
                      Clear
                    </button>
                    <button
                      type="button"
                      class="btn btn-add-brand ms-4"
                      data-bs-toggle="modal"
                      data-bs-target="#addModal"
                    >
                      Add Brand
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <div class="card mt-4">
            <div class="card-body p-0">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th style="width: 30%">Brand Name</th>
                    <th style="width: 40%">Description</th>
                    <th style="width: 15%" class="text-center">Status</th>
                    <th style="width: 15%" class="text-center">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (brands && brands.length > 0) { %> <% for(let i = 0; i <
                  brands.length; i++) { %>
                  <tr>
                    <td><%= brands[i].name %></td>
                    <td><%= brands[i].description %></td>
                    <td class="text-center">
                      <% if (brands[i].isListed === false) { %>
                      <button
                        class="btn btn-sm btn-success"
                        onclick="listBrand('<%= brands[i]._id %>')"
                      >
                        <i class="fas fa-eye"></i> List
                      </button>
                      <% } else { %>
                      <button
                        class="btn btn-sm btn-danger"
                        onclick="unlistBrand('<%= brands[i]._id %>')"
                      >
                        <i class="fas fa-eye-slash"></i> Unlist
                      </button>
                      <% } %>
                    </td>
                    <td>
                      <div class="action-buttons ps-5">
                        <button
                          class="action-btn edit-btn"
                          onclick="openEditModal('<%= brands[i]._id %>')"
                        >
                          <i class="fas fa-edit text-primary"></i>
                        </button>
                        <button
                          class="action-btn delete-btn"
                          onclick="deleteBrand('<%= brands[i]._id %>')"
                        >
                          <i class="fas fa-trash text-danger"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                  <% } %> <% } else { %>
                  <tr>
                    <td colspan="4" class="text-center py-3">
                      No brands found
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>

          <!-- Pagination -->
          <% if (totalPages > 1) { %>
          <div class="pagination-container">
            <nav aria-label="Brand pagination">
              <ul class="pagination">
                <li
                  class="page-item <%= currentPage === 1 ? 'disabled' : '' %>"
                >
                  <a
                    class="page-link"
                    href="/admin/brands?page=1<%= search ? '&search=' + search : '' %>"
                    aria-label="First"
                  >
                    <span aria-hidden="true">««</span>
                  </a>
                </li>
                <li
                  class="page-item <%= currentPage === 1 ? 'disabled' : '' %>"
                >
                  <a
                    class="page-link"
                    href="/admin/brands?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>"
                    aria-label="Previous"
                  >
                    <span aria-hidden="true">«</span>
                  </a>
                </li>
                <% const startPage = Math.max(1, currentPage - 2); const endPage
                = Math.min(totalPages, startPage + 4); %> <% for(let i =
                startPage; i <= endPage; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                  <a
                    class="page-link"
                    href="/admin/brands?page=<%= i %><%= search ? '&search=' + search : '' %>"
                  >
                    <%= i %>
                  </a>
                </li>
                <% } %>
                <li
                  class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>"
                >
                  <a
                    class="page-link"
                    href="/admin/brands?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %>"
                    aria-label="Next"
                  >
                    <span aria-hidden="true">»</span>
                  </a>
                </li>
                <li
                  class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>"
                >
                  <a
                    class="page-link"
                    href="/admin/brands?page=<%= totalPages %><%= search ? '&search=' + search : '' %>"
                    aria-label="Last"
                  >
                    <span aria-hidden="true">»»</span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
          <% } %>

          <div class="text-center mt-3">
            <p>Showing <%= brands.length %> of <%= totalBrands %> brands</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Add Brand Modal -->
    <div
      class="modal fade"
      id="addModal"
      tabindex="-1"
      aria-labelledby="addModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addModalLabel">Add New Brand</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="addBrandForm">
              <div class="mb-3">
                <label for="name" class="form-label">Brand Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  required
                />
                <div class="invalid-feedback" id="name-error"></div>
              </div>
              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea
                  class="form-control"
                  id="description"
                  name="description"
                  rows="3"
                  required
                ></textarea>
                <div class="invalid-feedback" id="description-error"></div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
            <button type="button" class="btn btn-primary" id="saveBrand">
              Save Brand
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Brand Modal -->
    <div
      class="modal fade"
      id="editModal"
      tabindex="-1"
      aria-labelledby="editModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editModalLabel">Edit Brand</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="editBrandForm">
              <input type="hidden" id="edit-id" name="id" />
              <div class="mb-3">
                <label for="edit-name" class="form-label">Brand Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="edit-name"
                  name="name"
                  required
                />
                <div class="invalid-feedback" id="edit-name-error"></div>
              </div>
              <div class="mb-3">
                <label for="edit-description" class="form-label"
                  >Description</label
                >
                <textarea
                  class="form-control"
                  id="edit-description"
                  name="description"
                  rows="3"
                  required
                ></textarea>
                <div class="invalid-feedback" id="edit-description-error"></div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
            <button type="button" class="btn btn-primary" id="updateBrand">
              Update Brand
            </button>
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      // Clear search and reset
      document
        .getElementById("clearBtn")
        .addEventListener("click", function () {
          document.getElementById("searchInput").value = "";
          document.getElementById("searchForm").submit();
        });

      // Add new brand
      $(document).ready(function () {
        $("#saveBrand").on("click", function () {
          const name = $("#name").val().trim();
          const description = $("#description").val().trim();

          $("#name-error, #description-error")
            .text("")
            .parent()
            .removeClass("was-validated");

          let isValid = true;

          if (!name) {
            $("#name").addClass("is-invalid");
            $("#name-error").text("Brand name is required").show();
            isValid = false;
          }

          if (!description) {
            $("#description").addClass("is-invalid");
            $("#description-error").text("Description is required").show();
            isValid = false;
          }

          if (isValid) {
            fetch("/admin/addBrand", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ name, description }),
            })
              .then((response) => response.json())
              .then((data) => {
                if (data.success) {
                  Swal.fire({
                    icon: "success",
                    title: "Success!",
                    text: data.message || "Brand added successfully",
                    timer: 1500,
                  }).then(() => {
                    $("#addModal").modal("hide");
                    location.reload();
                  });
                } else {
                  Swal.fire({
                    icon: "error",
                    title: "Error!",
                    text: data.message || "Failed to add brand",
                  });
                }
              })
              .catch((error) => {
                Swal.fire({
                  icon: "error",
                  title: "Error!",
                  text: error.message || "Something went wrong",
                });
              });
          }
        });
      });

      // Function to open edit modal and fetch brand data
      function openEditModal(brandId) {
        fetch(`/admin/getEditBrand?id=${brandId}`, {
          method: "GET",
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              $("#edit-id").val(data.brands._id);
              $("#edit-name").val(data.brands.name);
              $("#edit-description").val(data.brands.description);
              $("#editModal").modal("show");
            } else {
              Swal.fire({
                icon: "error",
                title: "Error!",
                text: data.message || "Failed to fetch brand data",
              });
            }
          })
          .catch((error) => {
            Swal.fire({
              icon: "error",
              title: "Error!",
              text: error.message || "Something went wrong",
            });
          });
      }

      // Update brand
      $(document).ready(function () {
        $("#updateBrand").on("click", function () {
          const id = $("#edit-id").val();
          const name = $("#edit-name").val().trim();
          const description = $("#edit-description").val().trim();

          $("#edit-name-error, #edit-description-error")
            .text("")
            .parent()
            .removeClass("was-validated");

          let isValid = true;

          if (!name) {
            $("#edit-name").addClass("is-invalid");
            $("#edit-name-error").text("Brand name is required").show();
            isValid = false;
          }

          if (!description) {
            $("#edit-description").addClass("is-invalid");
            $("#edit-description-error").text("Description is required").show();
            isValid = false;
          }

          if (isValid) {
            fetch("/admin/editBrand", {
              method: "PUT",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ id, name, description }),
            })
              .then((response) => response.json())
              .then((data) => {
                if (data.success) {
                  Swal.fire({
                    icon: "success",
                    title: "Success!",
                    text: data.message || "Brand updated successfully",
                    timer: 1500,
                  }).then(() => {
                    $("#editModal").modal("hide");
                    location.reload();
                  });
                } else {
                  Swal.fire({
                    icon: "error",
                    title: "Error!",
                    text: data.message || "Failed to update brand",
                  });
                }
              })
              .catch((error) => {
                Swal.fire({
                  icon: "error",
                  title: "Error!",
                  text: error.message || "Something went wrong",
                });
              });
          }
        });
      });

      // List brand
      function listBrand(brandId) {
        Swal.fire({
          title: "List Brand",
          text: "Are you sure you want to list this brand?",
          icon: "question",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, list it!",
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/admin/brandlisted/${brandId}`, {
              method: "PATCH",
              headers: {
                "Content-Type": "application/json",
              },
            })
              .then((response) => response.json())
              .then((data) => {
                if (data.success) {
                  Swal.fire({
                    icon: "success",
                    title: "Success!",
                    text: data.message || "Brand listed successfully",
                    timer: 1500,
                  }).then(() => {
                    location.reload();
                  });
                } else {
                  Swal.fire({
                    icon: "error",
                    title: "Error!",
                    text: data.message || "Failed to list brand",
                  });
                }
              })
              .catch((error) => {
                Swal.fire({
                  icon: "error",
                  title: "Error!",
                  text: error.message || "Something went wrong",
                });
              });
          }
        });
      }

      // Unlist brand
      function unlistBrand(brandId) {
        Swal.fire({
          title: "Unlist Brand",
          text: "Are you sure you want to unlist this brand?",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, unlist it!",
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/admin/brandunlisted/${brandId}`, {
              method: "PATCH",
              headers: {
                "Content-Type": "application/json",
              },
            })
              .then((response) => response.json())
              .then((data) => {
                if (data.success) {
                  Swal.fire({
                    icon: "success",
                    title: "Success!",
                    text: data.message || "Brand unlisted successfully",
                    timer: 1500,
                  }).then(() => {
                    location.reload();
                  });
                } else {
                  Swal.fire({
                    icon: "error",
                    title: "Error!",
                    text: data.message || "Failed to unlist brand",
                  });
                }
              })
              .catch((error) => {
                Swal.fire({
                  icon: "error",
                  title: "Error!",
                  text: error.message || "Something went wrong",
                });
              });
          }
        });
      }

      // Delete brand
      function deleteBrand(brandId) {
        Swal.fire({
          title: "Delete Brand",
          text: "Are you sure you want to delete this brand? This action cannot be undone.",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#d33",
          cancelButtonColor: "#3085d6",
          confirmButtonText: "Yes, delete it!",
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/admin/deleteBrand/${brandId}`, {
              method: "PATCH",
              headers: {
                "Content-Type": "application/json",
              },
            })
              .then((response) => response.json())
              .then((data) => {
                if (data.success) {
                  Swal.fire({
                    icon: "success",
                    title: "Success!",
                    text: data.message || "Brand deleted successfully",
                    timer: 1500,
                  }).then(() => {
                    location.reload();
                  });
                } else {
                  Swal.fire({
                    icon: "error",
                    title: "Error!",
                    text: data.message || "Failed to delete brand",
                  });
                }
              })
              .catch((error) => {
                Swal.fire({
                  icon: "error",
                  title: "Error!",
                  text: error.message || "Something went wrong",
                });
              });
          }
        });
      }
    </script>
  </body>
</html>
