<script>
    async function editProfile(user) {
        try {
            const response = await fetch("/editProfile",{
                method :"GET",
                headers: { 'Content-Type': 'application/json' }
            })
        if (response.ok) {
            window.location.href = '/editProfile'; // Redirect to checkout page
        } else {
            const data = await response.json();
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: data.message || 'Failed to load checkout page'
            });
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An error occurred while loading the checkout page'
        });
    }
    }

   function showEmailModal() {
            document.getElementById('email-modal').style.display = 'flex';
        }

        function closeEmailModal() {
            document.getElementById('email-modal').style.display = 'none';
            document.getElementById('email-form').reset();
        }

    function showPasswordPopup() {
        document.getElementById('updateModal').style.display = 'flex';
    }
       function closePasswordModal() {
        document.getElementById('updateModal').style.display = 'none';
    } 



        

        document.getElementById('email-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const newEmail = document.querySelector('#email-form input[name="newEmail"]').value;

            try {
                const response = await fetch('/changeEmail', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ newEmail }),
                    credentials: 'include'
                });

                const result = await response.json();
                if (response.ok) {
                    closeEmailModal();
                    Swal.fire({
                        icon: 'success',
                        title: 'OTP Sent',
                        text: 'An OTP has been sent to your new email.',
                        timer: 1500
                    }).then(() => {
                        window.location.href = '/changeEmailOtp';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: result.message || 'Failed to send OTP'
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while processing your request'
                });
            }
        });

        document.getElementById('passwordUpdateForm').addEventListener('submit', async function(event) {
    event.preventDefault(); 

    const form = document.getElementById('passwordUpdateForm');
    const formData = new FormData(form);
    const data = {
        oldPassword: formData.get('oldPassword'),
        newPassword: formData.get('newPassword'),
        confirmPassword: formData.get('confirmPassword')
    };

    try {
        const response = await fetch('/update-password', {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data),
            credentials: 'include' 
        });

        const result = await response.json();

        if (response.ok) {
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: 'Password updated successfully!',
                confirmButtonText: 'OK',
                confirmButtonColor: '#C6A969' 
            }).then(() => {
                closePasswordModal(); 
                form.reset(); 
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: result.message || 'Failed to update password',
                confirmButtonText: 'OK',
                confirmButtonColor: '#C6A969'
            });
        }
    } catch (error) {
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'An error occurred while updating the password',
            confirmButtonText: 'OK',
            confirmButtonColor: '#C6A969'
        });
    }
});

// New JavaScript for Referral Code
    function copyReferralCode() {
        const referralCode = document.getElementById('referralCode').value;
        if (referralCode && referralCode !== 'Not available') {
            navigator.clipboard.writeText(referralCode).then(() => {
                Swal.fire({
                    icon: 'success',
                    title: 'Copied!',
                    text: 'Referral code copied to clipboard.',
                    timer: 1500,
                    confirmButtonColor: '#C6A969'
                });
            }).catch(err => {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to copy referral code.',
                    confirmButtonColor: '#C6A969'
                });
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'No referral code available.',
                confirmButtonColor: '#C6A969'
            });
        }
    }

    function shareReferralCode() {
        const referralCode = document.getElementById('referralCode').value;
        if (referralCode && referralCode !== 'Not available') {
            const shareUrl = `${window.location.origin}/signup?ref=${referralCode}`;
            navigator.clipboard.writeText(shareUrl).then(() => {
                Swal.fire({
                    icon: 'success',
                    title: 'Shareable Link Copied!',
                    text: 'Referral link copied to clipboard. Share it with your friends!',
                    timer: 1500,
                    confirmButtonColor: '#C6A969'
                });
            }).catch(err => {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to copy referral link.',
                    confirmButtonColor: '#C6A969'
                });
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'No referral code available.',
                confirmButtonColor: '#C6A969'
            });
        }
    }

    function copyReferralLink() {
    const referralLink = document.getElementById('referralLink').value;
    if (referralLink && referralLink !== '') {
        navigator.clipboard.writeText(referralLink).then(() => {
            Swal.fire({
                icon: 'success',
                title: 'Copied!',
                text: 'Referral link copied to clipboard.',
                timer: 1500,
                confirmButtonColor: '#C6A969'
            });
        }).catch(err => {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to copy referral link.',
                confirmButtonColor: '#C6A969'
            });
        });
    } else {
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'No referral link available.',
            confirmButtonColor: '#C6A969'
        });
    }
}
