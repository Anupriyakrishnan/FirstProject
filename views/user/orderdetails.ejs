    function openReturnModal() {
      const backdrop = document.getElementById("returnBackdrop");
      const form = document.getElementById("returnForm");
      const otherGrp = document.getElementById("otherReturnReasonGroup");
      const reasonEl = document.getElementById("returnReason");
      backdrop.classList.add("show");
      document.body.style.overflow = "hidden";
      form.reset();
      otherGrp.style.display = "none";
    }

    function closeReturnModal() {
      const backdrop = document.getElementById("returnBackdrop");
      const form = document.getElementById("returnForm");
      const otherGrp = document.getElementById("otherReturnReasonGroup");
      backdrop.classList.remove("show");
      document.body.style.overflow = "";
      form.reset();
      otherGrp.style.display = "none";
    }

    document.getElementById("returnReason")?.addEventListener("change", () => {
      const otherGrp = document.getElementById("otherReturnReasonGroup");
      const reasonEl = document.getElementById("returnReason");
      otherGrp.style.display = reasonEl.value === "Other" ? "block" : "none";
    });

    function submitReturn() {
      const itemId = document.getElementById("returnItemId").value;
      const reason =
        document.getElementById("returnReason").value === "Other"
          ? document.getElementById("otherReturnReason").value.trim()
          : document.getElementById("returnReason").value;

      if (!itemId || !reason) {
        return Swal.fire({
          icon: "error",
          title: "Invalid Input",
          text: "Please select both a product and a reason.",
          timer: 2000,
          showConfirmButton: false,
        });
      }

      fetch("/return-item", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          orderId: "<%= order.orderId %>",
          itemId,
          reason,
        }),
      })
        .then((r) => {
          if (!r.ok) throw new Error(`HTTP ${r.status}`);
          return r.json();
        })
        .then((json) => {
          if (json.success) {
            closeReturnModal();
            Swal.fire({
              icon: "success",
              title: "Return Requested",
              text: "Your return request has been submitted.",
              timer: 2000,
              showConfirmButton: false,
            }).then(() => {
              location.reload();
            });
          } else {
            Swal.fire({ icon: "error", title: "Failed", text: json.message });
          }
        })
        .catch((err) => {
          console.error(err);
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "Network or server error.",
          });
        });
    }

