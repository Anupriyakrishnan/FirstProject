<body>
  <div class="container container-orderdetais">
    <!-- Header -->
    <div class="header">
      <h1 class="page-title">ORDER DETAILS</h1>
    </div>

    <!-- Order ID -->
    <div class="order-id">Order ID #<%= order.orderId %></div>

    <% const st = order.status.toLowerCase(); %>
    <!-- Progress Section -->
    <% if (st !== 'cancelled') { %>
    <div class="progress-section">
      <div class="progress-steps">
        <div class="progress-line"></div>
        <div class="progress-line-active"></div>

        <div class="step">
          <div class="step-circle completed"></div>
          <div class="step-label">ORDERED</div>
        </div>

        <div class="step">
          <div
            class="step-circle <%= ['processing', 'shipped', 'delivered'].includes(st) ? 'completed' : 'pending' %>"
          ></div>
          <div class="step-label">PROCESSING</div>
        </div>

        <div class="step">
          <div
            class="step-circle <%= ['shipped', 'delivered'].includes(st) ? 'completed' : 'pending' %>"
          ></div>
          <div class="step-label">SHIPPED</div>
        </div>

        <div class="step">
          <div
            class="step-circle <%= st === 'delivered' ? 'completed' : 'pending' %>"
          ></div>
          <div class="step-label">DELIVERED</div>
        </div>
      </div>
    </div>
    <% } else { %>
    <div class="status-cancelled-section">This order has been cancelled.</div>
    <% } %>

    <!-- Shipping Address -->
    <div class="section">
      <div class="section-header">Shipping Address</div>
      <div class="section-content">
        <% if (order.address) { %>
        <div class="address-name"><%= order.address.name %></div>
        <div class="address-info">
          <%= order.address.addressType %><%= order.address.landmark ? ', ' +
          order.address.landmark : '' %><br />
          <%= order.address.city %> - <%= order.address.pincode %><br />
          <%= order.address.state %><br />
          Phone: <%= order.address.phone %>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Product Details -->
    <div class="section">
      <div class="section-content">
        <div class="section-header-pro">
          <span>Product Details</span>
          <% if(st === "delivered") { %>
          <button
            class="btn btn-warning return-btn"
            onclick="openReturnModal()"
          >
            Return Item
          </button>
          <% } %>
        </div>
        <% cartItems.forEach(item => { %>
        <div class="product-item">
          <img
            src="<%= item.Product?.  productImage?.[0] || '/images/placeholder.jpg' %>"
            class="product-image"
            alt="Product"
          />
          <div class="product-details">
            <div class="product-name"><%= item.Product.productName %></div>
            <div class="product-specs">
              Quantity: <%= item.quantity %><br />
              Price: ₹<%= item.price.toLocaleString('en-IN') %><br />
              Total Price: ₹<%= (item.price *
              item.quantity).toLocaleString('en-IN') %><br />
              Status: <%= item.status ? item.status.toUpperCase() :
              order.status.toUpperCase() %> <% if (item.status ===
              'returnrequest') { %>
              <br />Return Reason: <%= item.returnReason %> <% } %>
            </div>
          </div>
        </div>
        <%})%> <% if (st === 'pending' || st === 'processing'|| st
        ==='confirmed') { %>
        <div class="action-buttons">
          <button class="btn btn-warning" onclick="openCancelModal()">
            Cancel Item
          </button>
        </div>
        <%}%>
      </div>
    </div>

    <!-- Payment Summary -->
    <div class="section">
      <div class="section-header">Payment Summary</div>
      <div class="section-content">
        <div class="summary-row">
          <span class="summary-label">Items Total</span>
          <span class="summary-value"
            >₹<%= order.totalPrice.toLocaleString('en-IN') %></span
          >
        </div>

        <div class="summary-row">
          <span class="summary-label"> Discount</span>
          <span class="summary-value"
            >₹<%= order.discount.toLocaleString('en-IN') %></span
          >
        </div>

        <div class="summary-row">
          <span class="summary-label">Shipping Fee</span>
          <span class="summary-value">₹0</span>
        </div>

        <div class="summary-row">
          <span class="summary-label">Order Total</span>
          <span class="summary-value"
            >₹<%= order.finalAmount.toLocaleString('en-IN') %></span
          >
        </div>
        <!-- <div class="summary-row">
          <span class="summary-label">Payable Amount</span>
          <span class="summary-value">₹<%= (order.finalAmount - order.payment.cancelled).toLocaleString('en-IN') %></span>
        </div> -->
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
      <button class="btn btn-primary" onclick="downloadInvoice()">
        Download Invoice
      </button>
      <% if (st === 'pending' || st === 'processing' || st === 'confirmed') { %>
      <button
        class="btn btn-outline"
        onclick="cancelOrder('<%= order.orderId %>')"
      >
        Cancel Order
      </button>

      <% } else if (st === 'delivered') { %>
      <button
        id="return-btn-<%= order.orderId %>"
        class="btn btn-outline"
        onclick="returnOrder('<%= order.orderId %>')"
      >
        <%= order.returnRequest?.status === 'pending' ? 'Return Order' : 'Return
        Order' %>
      </button>

      <% } %>

      <button class="btn btn-outline" onclick="contactSupport()">
        Contact Support
      </button>
    </div>
  </div>

  <!-- Cancel Item Modal -->
  <div id="cancelBackdrop" class="modal-backdrop-custom">
    <div class="modal-custom">
      <div class="modal-header p-3 border-bottom">
        <h5 class="modal-title">Cancel Item</h5>
        <button
          type="button"
          class="btn-close"
          aria-label="Close"
          onclick="closeCancelModal()"
        ></button>
      </div>
      <div class="modal-body p-3">
        <form id="cancelForm">
          <div class="mb-3">
            <label for="itemId" class="form-label">Product Name</label>
            <select id="itemId" class="form-select" required>
              <option value="">— select —</option>
              <% cartItems.forEach(item => { %>
              <option value="<%= item._id %>">
                <%= item.Product.productName %>
              </option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3">
            <label for="cancelReason" class="form-label">Reason</label>
            <select id="cancelReason" class="form-select" required>
              <option value="">— select —</option>
              <option>Changed my mind</option>
              <option>Found better price elsewhere</option>
              <option>Ordered by mistake</option>
              <option>Product no longer needed</option>
              <option>Delivery too slow</option>
              <option>Other</option>
            </select>
          </div>
          <div class="mb-3" id="otherReasonGroup" style="display: none">
            <label for="otherReason" class="form-label">Please specify</label>
            <textarea
              id="otherReason"
              class="form-control form-textarea"
            ></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer p-3 border-top">
        <button class="btn btn-secondary" onclick="closeCancelModal()">
          Close
        </button>
        <button class="btn btn-danger" onclick="submitCancellation()">
          Cancel Item
        </button>
      </div>
    </div>
  </div>

  <!-- Add this after the Cancel Item Modal -->
  <div id="returnBackdrop" class="modal-backdrop-custom">
    <div class="modal-custom">
      <div class="modal-header p-3 border-bottom">
        <h5 class="modal-title">Return Item</h5>
        <button
          type="button"
          class="btn-close"
          aria-label="Close"
          onclick="closeReturnModal()"
        ></button>
      </div>
      <div class="modal-body p-3">
        <form id="returnForm">
          <div class="mb-3">
            <label for="returnItemId" class="form-label">Product Name</label>
            <select id="returnItemId" class="form-select" required>
              <option value="">— select —</option>
              <% cartItems.forEach(item => { %>
              <option value="<%= item._id %>">
                <%= item.Product.productName %>
              </option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3">
            <label for="returnReason" class="form-label">Reason</label>
            <select id="returnReason" class="form-select" required>
              <option value="">— select —</option>
              <option>Defective product</option>
              <option>Wrong item delivered</option>
              <option>Changed my mind</option>
              <option>Other</option>
            </select>
          </div>
          <div class="mb-3" id="otherReturnReasonGroup" style="display: none">
            <label for="otherReturnReason" class="form-label"
              >Please specify</label
            >
            <textarea
              id="otherReturnReason"
              class="form-control form-textarea"
            ></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer p-3 border-top">
        <button class="btn btn-secondary" onclick="closeReturnModal()">
          Close
        </button>
        <button class="btn btn-danger" onclick="submitReturn()">
          Submit Return
        </button>
      </div>
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
    crossorigin="anonymous"
  ></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    function downloadInvoice() {
      Swal.fire({
        icon: "info",
        title: "Generating Invoice",
        text: "Your invoice is being prepared...",
        showConfirmButton: false,
        timer: 1500,
      }).then(() => {
        fetch(`/download-invoice?orderId=<%= order.orderId %>`, {
          method: "GET",
          headers: {
            "Content-Type": "application/json",
          },
        })
          .then((response) => {
            if (!response.ok) {
              throw new Error("Failed to generate invoice");
            }
            return response.blob();
          })
          .then((blob) => {
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement("a");
            a.href = url;
            a.download = `Invoice_${"<%= order.orderId %>"}.pdf`;
            document.body.appendChild(a);
            a.click();
            a.remove();
            window.URL.revokeObjectURL(url);
            Swal.fire({
              icon: "success",
              title: "Invoice Downloaded",
              text: "Your invoice has been downloaded successfully!",
              timer: 1500,
              showConfirmButton: false,
            });
          })
          .catch((error) => {
            console.error("Error downloading invoice:", error);
            Swal.fire({
              icon: "error",
              title: "Error",
              text: "Failed to download invoice. Please try again.",
            });
          });
      });
    }

    function cancelOrder(orderId) {
      Swal.fire({
        title: "Cancel Order",
        html: `
                    <p>Please confirm the Order ID to cancel:</p>
                    <input type="text" id="orderIdInput" class="swal2-input" placeholder="Enter Order ID">
                `,
        showCancelButton: true,
        confirmButtonText: "Confirm Cancellation",
        cancelButtonText: "Close",
        preConfirm: () => {
          const inputOrderId =
            Swal.getPopup().querySelector("#orderIdInput").value;
          if (!inputOrderId) {
            Swal.showValidationMessage("Please enter the Order ID");
            return false;
          }
          if (inputOrderId !== orderId) {
            Swal.showValidationMessage("Incorrect Order ID");
            return false;
          }
          return inputOrderId;
        },
      }).then((result) => {
        if (result.isConfirmed) {
          fetch("/cancel-order", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ orderId: result.value }),
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                Swal.fire({
                  icon: "success",
                  title: "Order Cancelled",
                  text: `Order #${orderId} has been successfully cancelled.`,
                  timer: 2000,
                  showConfirmButton: false,
                }).then(() => {
                  location.reload();
                });
              } else {
                Swal.fire({
                  icon: "error",
                  title: "Cancellation Failed",
                  text:
                    data.message ||
                    "Unable to cancel the order. Please try again.",
                });
              }
            })
            .catch((error) => {
              Swal.fire({
                icon: "error",
                title: "Error",
                text: "An error occurred while cancelling the order.",
              });
            });
        }
      });
    }

    document.addEventListener("DOMContentLoaded", () => {
      const backdrop = document.getElementById("cancelBackdrop");
      const form = document.getElementById("cancelForm");
      const otherGrp = document.getElementById("otherReasonGroup");
      const reasonEl = document.getElementById("cancelReason");
      const itemIdEl = document.getElementById("itemId");

      window.openCancelModal = () => {
        backdrop.classList.add("show");
        document.body.style.overflow = "hidden";
        form.reset();
        otherGrp.style.display = "none";
      };

      window.closeCancelModal = () => {
        backdrop.classList.remove("show");
        document.body.style.overflow = "";
        form.reset();
        otherGrp.style.display = "none";
      };

      reasonEl.addEventListener("change", () => {
        otherGrp.style.display = reasonEl.value === "Other" ? "block" : "none";
      });

      backdrop.addEventListener("click", (e) => {
        if (e.target === backdrop) closeCancelModal();
      });

      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && backdrop.classList.contains("show")) {
          closeCancelModal();
        }
      });
    });
    function submitCancellation() {
      const itemId = document.getElementById("itemId").value;
      const reason =
        document.getElementById("cancelReason").value === "Other"
          ? document.getElementById("otherReason").value.trim()
          : document.getElementById("cancelReason").value;

      if (!itemId || !reason) {
        return Swal.fire({
          icon: "error",
          title: "Invalid Input",
          text: "Please select both a product and a reason.",
          timer: 2000,
          showConfirmButton: false,
        });
      }

      fetch("/cancel-item", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
