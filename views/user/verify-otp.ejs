<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OTP Verification</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f8f9fa;
      }
      .otp-container {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 360px;
      }
      .otp-input {
        width: 200px;
        height: 50px;
        text-align: center;
        font-size: 1.5rem;
        margin: 5px;
        border-radius: 5px;
        border: 1px solid #ced4da;
      }
      .expired {
        color: #dc3545;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="otp-container">
      <h1 class="mb-3" style="font-family: fantasy">Timeluxe</h1>
      <h5>Verification Code</h5>
      <p class="text-muted">We have sent the verification code to your email</p>
      <form id="otp-form" onsubmit="return validateOTPForm(event)">
        <div class="d-flex justify-content-center mb-3">
          <input
            type="text"
            class="otp-input"
            maxlength="4"
            inputmode="numeric"
            pattern="[0-9]*"
            required
          />
        </div>
        <button type="submit" class="btn btn-danger w-100">Verify</button>
      </form>
      <p class="otp-timer mt-3 text-muted">
        Resend OTP in: <strong id="timerValue">02:00</strong>
      </p>
      <a
        href="#"
        id="resend-btn"
        class="text-danger"
        onclick="resendOTP(); return false;"
        >Resend</a
      >
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.17.2/dist/sweetalert2.all.min.js"></script>
    <script>
      // Focus on the first OTP input when page loads
      document.querySelector(".otp-input").focus();

      let timer = 120; // 2 minutes to match backend
      let timerInterval;

      function formatTime(seconds) {
        const mins = Math.floor(seconds / 60);
        const secs = seconds % 60;
        return `0${mins}:${secs < 10 ? "0" : ""}${secs}`;
      }

      function startTimer() {
        document.getElementById("timerValue").textContent = formatTime(timer);

        document.getElementById("resend-btn").style.pointerEvents = "none";
        document.getElementById("resend-btn").style.opacity = "0.5";

        timerInterval = setInterval(() => {
          timer--;
          document.getElementById("timerValue").textContent = formatTime(timer);

          if (timer <= 0) {
            clearInterval(timerInterval);
            document.getElementById("timerValue").textContent = "Expired";
            document.getElementById("timerValue").classList.add("expired");

            document.getElementById("resend-btn").style.pointerEvents = "auto";
            document.getElementById("resend-btn").style.opacity = "1";
          }
        }, 1000);
      }

      startTimer();

      async function validateOTPForm() {
        // Prevent multiple submissions
        const submitButton = document.querySelector('button[type="submit"]');
        submitButton.disabled = true;

        const otpInputs = document.querySelectorAll(".otp-input");
        let otpValue = "";

        otpInputs.forEach((input) => {
          otpValue += input.value.trim();
        });

        // Debug logging
        console.log("OTP Value:", otpValue);
        console.log("OTP Length:", otpValue.length);
        console.log("OTP Type:", typeof otpValue);

        // Validate OTP
        if (!otpValue || otpValue.length !== 4) {
          await Swal.fire({
            icon: "error",
            title: "Invalid OTP",
            text: "Please enter a 4-digit OTP",
          });
          submitButton.disabled = false;
          return false;
        }

        try {
          const response = await fetch("/verify-otp", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ otp: otpValue }),
          });

          console.log("Response status:", response.status);

          const data = await response.json();
          console.log("Response data:", data);

          if (data.success) {
            await Swal.fire({
              icon: "success",
              title: "OTP Verified Successfully",
              text: data.message || "Account created successfully!",
              showConfirmButton: false,
              timer: 1500,
            });

            // Small delay to ensure session is saved
            setTimeout(() => {
              window.location.href = data.redirectUrl || "/";
            }, 1500);
          } else {
            await Swal.fire({
              icon: "error",
              title: "Verification Failed",
              text: data.message || "Invalid OTP. Please try again.",
            });
            submitButton.disabled = false;
          }
        } catch (error) {
          console.error("Fetch error:", error);
          await Swal.fire({
            icon: "error",
            title: "Connection Error",
            text: "Please check your connection and try again",
          });
          submitButton.disabled = false;
        }
        return false;
      }

      async function resendOTP() {
        clearInterval(timerInterval);
        timer = 60; // 1 minute for resend
        document.getElementById("timerValue").textContent = formatTime(timer);
        document.getElementById("timerValue").classList.remove("expired");

        // Enable inputs
        document.querySelectorAll(".otp-input").forEach((input) => {
          input.value = "";
          input.disabled = false;
        });

        // Focus on first input
        document.querySelector(".otp-input").focus();

        // Restart timer
        startTimer();

        try {
          const response = await fetch("/resend-otp", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          });
          const data = await response.json();

          if (data.success) {
            await Swal.fire({
              icon: "success",
              title: "OTP Resent Successfully",
              text: "Please check your email",
              showConfirmButton: false,
              timer: 1500,
            });
          } else {
            await Swal.fire({
              icon: "error",
              title: "Error",
              text:
                data.message ||
                "An error occurred while resending OTP. Please try again.",
            });
          }
        } catch (error) {
          console.error("Resend error:", error);
          await Swal.fire({
            icon: "error",
            title: "Error",
            text: "An error occurred while resending OTP. Please try again.",
          });
        }
      }

      // Prevent form submission on Enter key (only allow button click or form submit)
      document
        .querySelector(".otp-input")
        .addEventListener("keypress", function (e) {
          if (e.key === "Enter") {
            e.preventDefault();
            validateOTPForm();
          }
        });
    </script>
  </body>
</html>
